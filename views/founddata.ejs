<%- include('header') %>
<div class="view">
<h1 class="heading"> Found Data </h1>
<div class="course">
    <h2>Course Name</h2>
    <h2>Course Faculty</h2>
    <h2>Course Code</h2>
    <h2>Course Department</h2>
</div>
<div class="course">

    <p>
        <%= found.name %>
    </p>
    <p>
        <%= found.faculty %>
    </p>
    <p>
        <%= found.code %>
    </p>
    <p>
        <%= found.dept %>
    </p>
</div>
<h1 class="heading"> Update information  </h1>

<form action="/founddata" method="post">
    <label class="formlabel" for="name">Course Name</label>
    <input type="text" class="forminput" name="name" value="<%= found.name %>">
    <label class="formlabel" for="code">Course code</label>
    <input type="text" class="forminput" name="code" value="<%= found.code %>">
    <label class="formlabel" for="faculty">Assigned faculty</label>
    <input type="text" class="forminput" name="faculty" value="<%= found.faculty %>">
    <label class="formlabel" for="department">Course Department</label>
    <input type="text" class="forminput" name="department" value="<%= found.dept %>">
    <button type="submit" class="subbtn">Update</button>
</form>
</div>
<%- include('footer') %>